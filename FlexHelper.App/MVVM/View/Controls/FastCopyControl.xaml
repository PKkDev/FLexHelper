<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="FlexHelper.App.MVVM.View.Controls.FastCopyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlexHelper.App.MVVM.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left">

        <PasswordBox Header="UserName" Width="150" Name="UserNameBox" Password="{x:Bind FastTextModel.Text, Mode=TwoWay}" PasswordChar="*" PasswordRevealMode="Hidden" AutomationProperties.Name="Sample password box"/>

        <ToggleButton VerticalAlignment="Bottom" ClickMode="Press" Click="UserNameBox_Toggle_Click" >
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7B3;"></FontIcon>
        </ToggleButton>

        <Button VerticalAlignment="Bottom" Click="UserNameBox_Copy_Click" AccessKey="{x:Bind FastTextModel.Key, Mode=OneWay}">
            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF413;"></FontIcon>
        </Button>
 
    </StackPanel>

</UserControl>
